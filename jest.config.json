{
  "verbose": true,
  "preset": "ts-jest",
  "collectCoverage": false,
  "testRegex": "./packages/.+/__tests__/.*$",
  "moduleFileExtensions": ["vue", "ts", "js"],
  "moduleNameMapper": {
    "^~\/(.*)$": "<rootDir>/packages/./web/src/$1"
  },
  "transform": {
    "^.+\\.vue$": "vue3-jest"
  },
  "testEnvironment": "jsdom",
  "coveragePathIgnorePatterns": ["/node_modules/"],
  "globals": {
    "ts-jest": {
      "tsconfig": "./tsconfig.json",
      "diagnostics": true
    },
    "vue-jest": {
      "babelConfig": false
    }
  }
}
