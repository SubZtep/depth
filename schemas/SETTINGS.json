{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Settings",
  "description": "Project settings â€” router and other basic stuff",
  "type": "object",
  "properties": {
    "audio": {
      "title": "AudioSettings",
      "type": "object",
      "properties": {
        "volume": {
          "type": "number",
          "description": "Master volume",
          "minimum": 0,
          "maximum": 1
        },
        "samples": {
          "type": "object",
          "description": "Sounds samples",
          "properties": {
            "denied": {
              "type": "string"
            }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    },
    "video": {
      "title": "VideoSettings",
      "type": "object",
      "properties": {
        "clips": {
          "type": "array",
          "description": "Attached video clips",
          "items": {
            "type": "string"
          },
          "uniqueItems": true
        }
      },
      "additionalProperties": false
    }
  },
  "required": ["router"],
  "additionalProperties": false
}
