{
  "name": "depth",
  "version": "0.1.0",
  "private": true,
  "description": "depth test",
  "scripts": {
    "build": "pnpm recursive run build",
    "wipe": "pnpm recursive exec -- rm -rf node_modules dist coverage tsconfig.tsbuildinfo .pnpm-debug.log",
    "wiper": "sh scripts/wipe_all.sh",
    "dev": "pnpm --recursive --parallel dev",
    "web": "pnpm run dev watch --filter @depth/web",
    "serve": "pnpm recursive run serve --filter @depth/web",
    "lint": "eslint .",
    "test": "jest",
    "coverage": "jest --coverage",
    "ncu": "pnpm recursive exec -- ncu -u",
    "moo": "npx cowsay moo",
    "preinstall": "npx only-allow pnpm"
  },
  "author": "Andras Serfozo <subztep@gmail.com>",
  "license": "Unlicense",
  "repository": "github:SubZtep/depth",
  "devDependencies": {
    "@types/jest": "^27.0.3",
    "@typescript-eslint/eslint-plugin": "^5.7.0",
    "@typescript-eslint/parser": "^5.7.0",
    "@typescript-eslint/typescript-estree": "^5.7.0",
    "@vue/test-utils": "^2.0.0-rc.16",
    "eslint": "^8.4.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-tsdoc": "^0.2.14",
    "eslint-plugin-unicorn": "^39.0.0",
    "eslint-plugin-vue": "^8.2.0",
    "jest": "^27.4.5",
    "pnpm": "^6.24.1",
    "prettier": "^2.5.1",
    "ts-jest": "^27.1.1",
    "typescript": "^4.5.4",
    "vue3-jest": "^27.0.0-alpha.1"
  },
  "pnpm": {
    "neverBuiltDependencies": [
      "node-gyp"
    ]
  },
  "engines": {
    "node": ">=16",
    "pnpm": ">=6"
  },
  "workspaces": [
    "packages/*"
  ]
}
