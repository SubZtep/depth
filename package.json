{
  "name": "depth",
  "version": "0.1.0",
  "private": true,
  "description": "depth test",
  "scripts": {
    "build": "pnpm recursive run build",
    "wipe": "pnpm recursive exec -- rm -rf node_modules dist coverage tsconfig.tsbuildinfo .pnpm-debug.log",
    "wiper": "sh scripts/wipe_all.sh",
    "dev": "pnpm --recursive --parallel dev",
    "web": "pnpm run dev watch --filter @depth/web",
    "serve": "pnpm recursive run serve --filter @depth/web",
    "lint": "eslint .",
    "test": "jest",
    "coverage": "jest --coverage",
    "ncu": "pnpm recursive exec -- ncu -u",
    "moo": "pnpm dlx cowsay moo"
  },
  "author": "Andras Serfozo <subztep@gmail.com>",
  "license": "Unlicense",
  "repository": "github:SubZtep/depth",
  "dependencies": {
    "@emotion/css": "^11.7.1",
    "@vueuse/core": "^7.5.4",
    "three": "^0.136.0",
    "vue": "^3.2.27"
  },
  "devDependencies": {
    "@types/jest": "^27.4.0",
    "@types/three": "^0.136.1",
    "@typescript-eslint/eslint-plugin": "^5.10.0",
    "@typescript-eslint/parser": "^5.10.0",
    "@typescript-eslint/typescript-estree": "^5.10.0",
    "@vue/test-utils": "^2.0.0-rc.16",
    "eslint": "^8.7.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-tsdoc": "^0.2.14",
    "eslint-plugin-unicorn": "^40.1.0",
    "eslint-plugin-vue": "^8.3.0",
    "jest": "^27.4.7",
    "prettier": "^2.5.1",
    "ts-jest": "^27.1.3",
    "typescript": "^4.5.5",
    "vue3-jest": "^27.0.0-alpha.1"
  },
  "pnpm": {
    "neverBuiltDependencies": [
      "node-gyp"
    ]
  },
  "engines": {
    "node": ">=16",
    "pnpm": ">=6"
  },
  "workspaces": [
    "packages/*",
    "web"
  ],
  "optionalDependencies": {
    "@babel/core": "^7.16.10",
    "babel-jest": "^27.4.6"
  }
}
