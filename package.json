{
  "name": "depth",
  "version": "0.1.0",
  "private": true,
  "description": "depth test",
  "author": "Andras Serfozo <subztep@gmail.com>",
  "license": "Unlicense",
  "repository": "github:SubZtep/depth",
  "type": "module",
  "workspaces": [
    "lib/*",
    "web"
  ],
  "scripts": {
    "dev": "pnpm --parallel --if-present dev",
    "build": "wireit",
    "serve": "wireit",
    "lint": "wireit",
    "ncu": "pnpm recursive exec -- ncu -u",
    "ts:check": "pnpm --parallel --if-present ts:check",
    "ts:build": "pnpm --parallel --if-present ts:build",
    "wc:anal": "pnpm --parallel --if-present wc:anal",
    "test": "pnpm run test --filter @depth/test",
    "wipe": "pnpm -r --reverse exec -- rm -rf node_modules/ dist/ .wireit/ .eslintcache pnpm-lock.yaml .pnpm-debug.log tsconfig.tsbuildinfo",
    "wipex": "pnpm recursive exec -- rm -rf node_modules/ dist/ .wireit/ .eslintcache pnpm-lock.yaml .pnpm-debug.log tsconfig.tsbuildinfo",
    "wipey": "sh scripts/wipe.sh"
  },
  "wireit": {
    "lint": {
      "command": "eslint --color --cache --cache-location .eslintcache .",
      "files": [
        "web/src/**/*.ts",
        "lib/*/src/**/*.ts",
        ".eslintrc",
        "web/.eslintrc",
        "lib/*/.eslintrc"
      ],
      "output": []
    },
    "build": {
      "command": "pnpm -r run build"
    },
    "serve": {
      "command": "pnpx http-server web/dist",
      "dependencies": [

      ]
    }
  },
  "devDependencies": {
    "@babel/cli": "^7.17.10",
    "@babel/core": "^7.17.10",
    "@babel/preset-typescript": "^7.16.7",
    "@types/babel-plugin-macros": "^2.8.5",
    "@types/node": "^17.0.29",
    "@types/three": "^0.139.0",
    "@typescript-eslint/eslint-plugin": "^5.21.0",
    "@typescript-eslint/parser": "^5.21.0",
    "@typescript-eslint/typescript-estree": "^5.21.0",
    "babel-plugin-macros": "^3.1.0",
    "eslint": "^8.14.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-lit": "^1.6.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-tsdoc": "^0.2.16",
    "eslint-plugin-unicorn": "^42.0.0",
    "eslint-plugin-wc": "^1.3.2",
    "prettier": "^2.6.2",
    "pug.macro": "^0.1.0",
    "typescript": "^4.6.3",
    "wireit": "^0.4.1"
  },
  "engines": {
    "node": ">=16",
    "pnpm": ">=6"
  }
}
