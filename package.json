{
  "name": "depth",
  "version": "0.1.0",
  "private": true,
  "description": "depth test",
  "author": "Andras Serfozo <subztep@gmail.com>",
  "license": "Unlicense",
  "repository": "github:SubZtep/depth",
  "type": "module",
  "workspaces": [
    "lib/*",
    "wc/*",
    "web"
  ],
  "scripts": {
    "dev": "pnpm --parallel --if-present dev",
    "build": "pnpm -r run build",
    "serve": "pnpm --filter @depth/web serve",
    "lint": "wireit",
    "ncu": "pnpm recursive exec -- ncu -u & ncu -u",
    "ts:check": "pnpm --parallel --if-present ts:check",
    "ts:build": "pnpm --parallel --if-present ts:build",
    "wc:anal": "pnpm --parallel --if-present wc:anal",
    "test": "pnpm --filter @depth/test test",
    "wipe": "sh scripts/wipe.sh"
  },
  "wireit": {
    "lint": {
      "command": "eslint --color --cache --cache-location .eslintcache .",
      "files": [
        "web/src/**/*.ts",
        "lib/*/src/**/*.ts",
        ".eslintrc",
        "web/.eslintrc",
        "lib/*/.eslintrc"
      ]
    }
  },
  "devDependencies": {
    "@babel/cli": "^7.17.10",
    "@babel/core": "^7.17.12",
    "@babel/preset-typescript": "^7.17.12",
    "@types/babel-plugin-macros": "^2.8.5",
    "@types/node": "^17.0.34",
    "@typescript-eslint/eslint-plugin": "^5.25.0",
    "@typescript-eslint/parser": "^5.25.0",
    "@typescript-eslint/typescript-estree": "^5.25.0",
    "babel-plugin-macros": "^3.1.0",
    "eslint": "^8.15.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-tsdoc": "^0.2.16",
    "eslint-plugin-unicorn": "^42.0.0",
    "eslint-plugin-wc": "^1.3.2",
    "prettier": "^2.6.2",
    "pug.macro": "^0.1.3",
    "typescript": "^4.6.4",
    "wireit": "^0.4.3"
  },
  "engines": {
    "node": ">=16",
    "pnpm": ">=6"
  }
}
