{
  "name": "depth",
  "version": "0.1.0",
  "private": true,
  "description": "depth test",
  "type": "module",
  "workspaces": [
    "web",
    "lib/*"
  ],
  "scripts": {
    "cy:open": "cypress open",
    "insta": "env-cmd yarn install",
    "wipe": "pnpm recursive exec -- rm -rf node_modules build types tsconfig.tsbuildinfo pnpm-lock.yaml",
    "wiper": "sh scripts/wipe_all.sh",
    "dev": "pnpm --recursive --parallel dev",
    "build": "pnpm --recursive build --if-present",
    "web": "pnpm run dev --filter @depth/web",
    "canvas": "pnpm run dev --filter @depth/canvas",
    "misc": "pnpm run dev --filter @depth/misc",
    "statem": "pnpm run dev --filter @depth/statem",
    "serve": "pnpm recursive run serve --filter @depth/web",
    "lint": "eslint .",
    "ncu": "pnpm recursive exec -- ncu -u"
  },
  "author": "Andras Serfozo <subztep@gmail.com>",
  "license": "Unlicense",
  "repository": "github:SubZtep/depth",
  "dependencies": {
    "comlink": "^4.3.1",
    "three": "^0.137.5"
  },
  "devDependencies": {
    "@types/node": "^17.0.18",
    "@types/three": "^0.137.0",
    "@typescript-eslint/eslint-plugin": "^5.12.0",
    "@typescript-eslint/parser": "^5.12.0",
    "@typescript-eslint/typescript-estree": "^5.12.0",
    "cypress": "^9.5.0",
    "env-cmd": "^10.1.0",
    "eslint": "^8.9.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-tsdoc": "^0.2.14",
    "eslint-plugin-unicorn": "^40.1.0",
    "prettier": "^2.5.1",
    "typescript": "^4.5.5"
  },
  "peerDependencies": {
    "env-cmd": "~10"
  },
  "engines": {
    "node": ">=16",
    "pnpm": ">=6"
  }
}
