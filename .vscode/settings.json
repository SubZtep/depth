{
  "deno.enable": false,
  "typescript.tsdk": "node_modules/typescript/lib",
  "windicss.enableCodeFolding": true,
  "windicss.foldByLength": true,
  "css.validate": false,
  "css.lint.emptyRules": "ignore",
  "editor.defaultFormatter": "dbaeumer.vscode-eslint",
  "files.associations": {
    ".prettierrc": "yaml"
  },
  "jest.autoRun": "off",
  "evenBetterToml.taploConfigEnabled": true,
  "evenBetterToml.commands.clearCache": true,
  "evenBetterToml.commands.downloadSchemas": false,
  "evenBetterToml.commands.copyJsonAsToml": false,
  "evenBetterToml.commands.copyTomlAsJson": false,
  "evenBetterToml.commands.pasteJsonAsToml": false,
  "evenBetterToml.commands.pasteTomlAsJson": false,

  "editor.quickSuggestions": {
    "strings": true
  },
  "[yaml]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
	"search.exclude": {
		"**/.git": true,
		// "**/dist/*/**": true,
		"**/node_modules/*/**": true,
		// "**/*.js": true,
		"**/*.d.ts": true,
		"**/*.spec.ts": true,
	},
  "monorepoWorkspace.includeRoot": true,
  "monorepoWorkspace.folders.custom": [
    {"regex":"app1", "prefix": "ðŸ”¥"},
    {"regex":"app2", "prefix": "ðŸ“š"}
  ],

  "files.watcherExclude": {
    "**/node_modules/*/**": true,
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  }
}
