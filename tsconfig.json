{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": [
      "ESNext",
      "DOM",
      "DOM.Iterable",
    ],
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "Node",
    "noEmit": false,
    "strict": true,
    "allowJs": true,
    "checkJs": false,
    "sourceMap": true,
    "noImplicitAny": false,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "isolatedModules": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": false,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "types": [
      "jest"
    ],
  },
  "include": [
    "packages"
  ],
  "exclude": [
    "node_modules",
    "public",
    "dist",
  ],
  "references": [
    { "path": "packages/web" }
  ]
}
