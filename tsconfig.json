{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": [
      "ESNext",
      "DOM",
      "DOM.Iterable",
    ],
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "strict": true,
    "allowJs": true,
    "checkJs": false,
    "sourceMap": true,
    "resolveJsonModule": true,
    "rootDir": ".",
    "baseUrl": ".",
    "noUnusedLocals": false,
    "skipLibCheck": true,
    "noImplicitAny": false,
    "types": [
      "jest"
    ]
  },
  "include": [
    "packages"
  ],
  "exclude": [
    "node_modules",
    "public",
    "dist",
  ],
  "references": [
    { "path": "packages/audio" },
    { "path": "packages/dat.gui" },
    { "path": "packages/stats.js" },
    { "path": "packages/web" }
  ]
}
