{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["ESNext", "DOM", "DOM.Iterable", "webworker"],
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "strict": true,
    "allowJs": true,
    "declaration": true,
    "skipLibCheck": true,
    "noEmitOnError": true,
    "noUnusedLocals": false,
    "noImplicitAny": false,
    "declarationMap": true,
    "isolatedModules": true
  },
  "exclude": ["dist", "node_modules", "__tests__"],
  "references": [
    { "path": "packages/audio" },
    { "path": "packages/canvas" },
    { "path": "packages/controller" },
    { "path": "packages/database" },
    { "path": "packages/hud" },
    { "path": "packages/misc" },
    { "path": "packages/physics" },
    { "path": "packages/poser" },
    { "path": "packages/stats" },
    { "path": "packages/video" },
    { "path": "web" }
  ]
}
