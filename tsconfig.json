{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["ESNext", "DOM", "DOM.Iterable", "WebWorker", "Webworker.Iterable"],
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "allowJs": true,
    "declaration": true,
    "skipLibCheck": true,
    "noEmitOnError": true,
    // "noUnusedLocals": true,
    // "noImplicitAny": false,
    "declarationMap": true,
    "isolatedModules": true,
    "experimentalDecorators": true,
    "useDefineForClassFields": false // should be true but lit-element isn't support that
    // "removeComments": false
  },
  // "include": ["src/*.ts"],
  "exclude": ["node_modules", "dist", "public"],
  "references": [
    { "path": "packages/statem" },
    { "path": "packages/misc" },
    { "path": "packages/canvas" },
    { "path": "web" }
  ]
}
