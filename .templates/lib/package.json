{
  "name": "@depth-lib/[FTName % kebabcase]",
  "version": "0.1.0",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "dev": "wireit",
    "build": "wireit",
    "ts:check": "tsc --noEmit",
    "ts:build": "tsc --emitDeclarationOnly"
  },
  "wireit": {
    "dev": {
      "command": "babel --config-file ../../.babelrc -w --extensions \".ts\" src -d dist",
      "dependencies": [
        "ts:build"
      ],
      "files": [
        "src/**/*.ts",
        "typings.d.ts"
      ],
      "output": [
        "dist/**"
      ]
    },
    "build": {
      "command": "babel --config-file ../../.babelrc src -d dist --extensions \".ts\"",
      "dependencies": [
        "ts:build"
      ],
      "files": [
        "src/**/*.ts",
        "typings.d.ts"
      ],
      "output": [
        "dist/**"
      ]
    }
  },
  "author": "Andras Serfozo <subztep@gmail.com>",
  "license": "Unlicense"
}
