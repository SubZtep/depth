{
  "name": "@depth-lib/statem",
  "version": "0.1.0",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "dev": "wireit",
    "build": "wireit",
    "ts:check": "tsc --noEmit",
    "ts:emit": "tsc --emitDeclarationOnly",
    "ts:dev": "tsc -w",
    "ts:build": "tsc"
  },
  "wireit": {
    "dev": {
      "command": "babel --root-mode upward -w --extensions \".ts\" src -d dist",
      "files": [
        "src/**/*.ts",
        "typings.d.ts"
      ]
    },
    "build": {
      "command": "babel --root-mode upward src -d dist --extensions \".ts\"",
      "dependencies": [
        "ts:emit"
      ],
      "files": [
        "src/**/*.ts",
        "typings.d.ts"
      ]
    }
  },
  "author": "Andras Serfozo <subztep@gmail.com>",
  "license": "Unlicense"
}
