{
  "name": "@depth/wc",
  "description": "Web Components",
  "version": "0.1.0",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "dev": "wireit",
    "buildx": "babel --extensions \".ts\" src -d dist",
    "buildy": "babel src -d dist --extensions \".ts\" --source-maps inline",
    "build": "wireit",
    "ts:check": "tsc --noEmit",
    "ts:build": "tsc --emitDeclarationOnly",
    "wc:anal": "web-component-analyzer ./src/d-*.ts --outFile README.md"
  },
  "wireit": {
    "dev": {
      "command": "babel --config-file ../../.babelrc -w --extensions \".ts\" src -d dist",
      "dependencies": [
        "ts:build"
      ],
      "files": [
        "src/**/*.ts",
        "typings.d.ts"
      ],
      "output": [
        "dist/**"
      ]
    },
    "build": {
      "command": "babel --config-file ../../.babelrc src -d dist --extensions \".ts\"",
      "dependencies": [
        "ts:build",
        "wc:anal"
      ],
      "files": [
        "src/**/*.ts",
        "typings.d.ts"
      ],
      "output": [
        "dist/**"
      ]
    }
  },
  "author": "Andras Serfozo <subztep@gmail.com>",
  "license": "Unlicense",
  "dependencies": {
    "@depth/misc": "workspace:*",
    "@depth/statem": "workspace:*"
  },
  "devDependencies": {
    "web-component-analyzer": "^1.1.6"
  }
}
